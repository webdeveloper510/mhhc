<?xml version="1.0" encoding="UTF-8"?>
<forms version="1.8.7">
	<form labelPlacement="top_label" useCurrentUserAsAuthor="1">
			<title><![CDATA[GravityView - Website Directory]]></title>
			<descriptionPlacement><![CDATA[above]]></descriptionPlacement>
			<button type="text">
				<text><![CDATA[Submit]]></text>
			</button>
			<fields>
				<field id="2" size="medium" type="text">
					<label><![CDATA[Website Title]]></label>
				</field>
				<field id="4" size="medium" type="text">
					<label><![CDATA[Tagline]]></label>
				</field>
				<field id="1" size="medium" type="website">
					<label><![CDATA[Website]]></label>
				</field>
				<field id="3" size="small" type="textarea">
					<label><![CDATA[Short Description]]></label>
				</field>
				<field id="5" size="medium" type="textarea">
					<label><![CDATA[Full Description]]></label>
				</field>
				<field id="10" size="medium" type="fileupload">
					<label><![CDATA[Featured Image]]></label>
					<allowedExtensions><![CDATA[.jpg,.jpeg,.jpe,.gif,.png]]></allowedExtensions>
					<salesforceMapType><![CDATA[live]]></salesforceMapType>
				</field>
				<field id="9" size="medium" type="fileupload">
					<label><![CDATA[Screenshots]]></label>
					<allowedExtensions><![CDATA[.jpg,.jpeg,.jpe,.gif,.png]]></allowedExtensions>
					<multipleFiles><![CDATA[1]]></multipleFiles>
					<salesforceMapType><![CDATA[live]]></salesforceMapType>
				</field>
				<field id="11" size="large" type="post_tags">
					<label><![CDATA[Tags]]></label>
					<salesforceMapType><![CDATA[live]]></salesforceMapType>
				</field>
				<field id="12" size="medium" type="post_category" displayAllCategories="1" inputType="select">
					<label><![CDATA[Category]]></label>
					<salesforceMapType><![CDATA[live]]></salesforceMapType>
				</field>
				<field id="13" type="checkbox" size="medium" adminOnly="1">
					<label><![CDATA[Approved? (Admin-only)]]></label>
					<adminLabel><![CDATA[Approved?]]></adminLabel>
					<choices>
						<choice>
							<text><![CDATA[Approved]]></text>
						</choice>
					</choices>
					<gravityview_approved><![CDATA[1]]></gravityview_approved>
				</field>
			</fields>
			<notifications>
				<notification id="534cb7a024c95">
					<to><![CDATA[{admin_email}]]></to>
					<name><![CDATA[Admin Notification]]></name>
					<event><![CDATA[form_submission]]></event>
					<toType><![CDATA[email]]></toType>
					<subject><![CDATA[New submission from {form_title}]]></subject>
					<message><![CDATA[{all_fields}]]></message>
				</notification>
			</notifications>
			<confirmations>
				<confirmation id="534cb7a024fa9" isDefault="1" type="message">
					<name><![CDATA[Default Confirmation]]></name>
					<message><![CDATA[Thanks for contacting us! We will get in touch with you shortly.]]></message>
				</confirmation>
			</confirmations>
		</form>
</forms>
